---
import LinkedIn from "../icons/LinkedIn.astro"
import Github from "../icons/Github.astro"
import Mail from "../icons/Mail.astro"
import TypedText from '../components/TypedText.jsx';
---


<section id="home" class="w-full h-[95vh] flex flex-row border-r-3 border-l-3 border-b-3 border-black">
    <div class="bg-gradient-to-b from-[#5252f8] to-[#1e0a54] w-[30%] flex items-center justify-center border-r-3 border-black">
        <div class="w-[90%] rounded-full border-3 border-black overflow-hidden">
            <img src="/Perfil.png" alt="Imagen de icono">
        </div>
    </div>
    <div class="bg-gradient-to-b from-[#a160de] to-[#42265a] w-full text-white flex flex-row items-center justify-start">
        <div class="mx-20">
            <div class="mb-6">
                <h1 class="font-bold text-8xl my-6">Álvaro <span class="text-[#8CCDEB]">Trigueros</span></h1>
                <h2 class="text-yellow-300 text-4xl my-6"><TypedText client:load/></span></h2>
                <p class="text-2xl my-6">Bienvenidos a mi Portfolios</p>
                <p class="text-2xl my-6">Si quieres ponerte en contacto conmigo <span class="text-[#8CCDEB] underline">alvarotriguerosdaw@gmail.com</span></p>
            </div>
            <div class="relative inline-block my-6 hover:scale-105 transition-transform duration-200">
          
                <div class="absolute inset-0 translate-x-1 translate-y-1 border-3 border-black rounded-lg bg-[#040d28]"></div>  
                
                <a
                  class="relative z-10 inline-block text-[#8CCDEB] text-2xl border-3 border-black rounded-lg bg-[#0B1D51] cursor-pointer px-4 py-2 "
                  download
                  href="/Álvaro_Trigueros_VázquezCV.pdf"
                >
                  <div class="flex flex-row gap-1 items-center">
                    Descargar CV
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="icon icon-tabler icon-tabler-download"
                    >
                      <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                      <path d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2 -2v-2" />
                      <path d="M7 11l5 5l5 -5" />
                      <path d="M12 4v12" />
                    </svg>
                  </div>
                </a>
            </div>

            <ul class="flex flex-row gap-12 my-6 items-center">
                <li>
                    <a href="https://github.com/alvarotriguerosdaw" target="_blank">
                        <Github class="size-14 hover:scale-105 transition-transform duration-200"/>
                    </a>
                </li>
                <li>
                    <a href="www.linkedin.com/in/alvaro-trigueros-vazquez" target="_blank">
                        <LinkedIn class="size-14 hover:scale-105 transition-transform duration-200"/>
                    </a>
                </li>
               
                <li>
                    <a href="www.linkedin.com/in/alvarotriguerosvazquez" target="_blank">
                        <Mail class="size-14 hover:scale-105 transition-transform duration-200"/>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</section>
